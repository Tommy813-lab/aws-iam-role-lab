{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "LambdaDynamoDBFullAccess",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:Query",
                "dynamodb:Scan"
            ],
            "Resource": "arn:aws:dynamodb:us-east-1:123456789012:table/tommy813-demo-table"
        }
    ]
}
